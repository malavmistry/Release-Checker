<UserControl x:Class="ReleaseChecker.AddToken"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReleaseChecker"
             mc:Ignorable="d" 
             d:DesignHeight="141" d:DesignWidth="279" Height="Auto" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid Width="279" Height="141" HorizontalAlignment="Left" VerticalAlignment="Top" >
        <Canvas HorizontalAlignment="Left" Height="141" VerticalAlignment="Top" Width="279" Visibility= "Visible" Background="#FF252525">
            <Button x:Name="AddToken1" Content="Add" Height="22" Canvas.Left="100" Canvas.Top="107" Width="77" Click="AddToken1_Click"/>
            <Button Content="Cancel" Height="22" Canvas.Left="191" Canvas.Top="107" Width="76" IsCancel="True" Click="Button_Click"/>
            <TextBox x:Name="TokenName" Height="22" Canvas.Left="100" TextWrapping="Wrap" Canvas.Top="29" Width="167"/>
            <TextBox x:Name="TokenValue" Height="22" Canvas.Left="100" TextWrapping="Wrap" Canvas.Top="67" Width="167" RenderTransformOrigin="0.505,0.537"/>
            <Label Content="Token Name" Height="31" Canvas.Left="10" Canvas.Top="29" Width="85" Background="{x:Null}" Foreground="White"/>
            <Label Content="Token Value" Height="31" Canvas.Left="10" Canvas.Top="65" Width="85" Background="{x:Null}" Foreground="White"/>
        </Canvas>

    </Grid>
</UserControl>
